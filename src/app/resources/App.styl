@require '../resources/vars.styl';
@require '../../esri/css/esri.css';
@require '../../bootstrap/dist/css/bootstrap.css';
@require '../../agrc/resources/map/BaseMap.css';
@import '../../layer-selector/resources/LayerSelector';

@font-face
  font-family 'Open Sans'
  font-style normal
  font-weight 400
  src local('Open Sans'), local('OpenSans'), url(http//fonts.gstatic.com/s/opensans/v10/cJZKeOuBrn4kERxqtaUH3ZBw1xU1rKptJj_0jans920.woff2) format('woff2')
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

body
html
.app
    width 100%
    height 100%
    margin 0
    padding 0
    overflow hidden
    color #444
    font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif !important

/* TITLE PANE */
.glyphicon--yellow
    color $compliment
.app
    .agrc.TL .selectorMain
        top 57px !important
        left 11px !important
    .title-container
        position absolute
        background-color $background
        color #ddd
        left 0
        right 0
        padding 8px
        .diamond
            position absolute
            top 0
            left 20px
            z-index 30
            background-image url(yield.png)
            height 90px
            width 97px
        .menu
            position absolute
            top 15px
            right 20px
            z-index 30
            width 25px
            height 25
            fill $compliment
            cursor pointer
        .upper-right
            position absolute
            right 60px
            color white
            opacity .7
            font-size 80%
            &.dateRange
                top 0
            &.download
                top 1.2em
            &.disclaimer
                top 2.4em
        h1
            margin 0 0 0 40px
            font-size 30px
        .highlight
            color $compliment
        .version
            font-size 10px
            text-decoration none
            vertical-align sub
            margin-left -10px
            &:hover
                text-decoration underline !important
                color $compliment

/* CENTER (MAP) */
    .center-container
        position absolute
        top 53px
        left 0
        right 0
        bottom 0
        overflow hidden
        [data-dojo-attach-point='mapDiv']
            position absolute
            top 0
            bottom 0
            left 0
            right 0
    .logo-alt
        width 100px
        height 45px
        margin-right 15px
        background-repeat no-repeat
        background-image url('logo-dps.svg')
    .logo-alt2
        width 80px
        height 27px
        position absolute
        right 120px
        bottom 0
        background-repeat no-repeat
        background-image url('logo-udot.svg')

/* GENERAL STUFF */
.map
    .tooltip
        width 100px
        position absolute
        border 1px solid #7EABCD
        background-color white
        padding 5px
        font-size 9pt
        z-index 9999
        border-radius 4px
        -ms-filter unquote('"progidDXImageTransform.Microsoft.Alpha(Opacity=100)"')
        filter unquote('alpha(opacity=100)')
        opacity 1

@media print
    *, *:before, *:after
        text-shadow none !important
        background transparent !important
        box-shadow none !important
    .app
        .title-container
            background-color $background !important
            color white !important
            .title
                color white !important
            .dateRange
                color white !important
                position static
            h1
                margin 0
            .highlight
                color white !important
            .version, .menu
                display none
        .map, .mapContainer
            display none
