.filter-title-node
    width 20%
    display inline-block
    text-align center
    cursor pointer
    .sprite
        height 59px
        width 59px
        display inline-block
        overflow hidden
        background-repeat no-repeat
        background-image url(panelsprite.png)
    .calendar
        background-position 0px 2px
        &.selected
            background-position -76px 2px
    .spatial
        background-position 0px -68px
        &.selected
            background-position -76px -68px
    .factors
        background-position 0px -138px
        &.selected
            background-position -76px -138px
    .severity
        background-position 0px -213px
        &.selected
            background-position -76px -213px
    .weather
        background-position 0px -287px
        &.selected
            background-position -76px -287px
