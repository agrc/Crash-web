@require 'vars.styl';

.filter
    label
        margin-left 5px
        padding 0
        line-height 2.5em
        &.button
            width 100%
            text-align center
            font-weight inherit
            display table-cell
            vertical-align middle
    .separator
        text-align left
        width 100%
        font-size 100%
        border-radius 0
        background-color $background
        display inline-block
    .pad
        margin-bottom 10px
    .form-control
        display inline
    .row
        width 100%
        margin 0
        &:last-child
            .item:first-child
                border-radius 0 0 0 10px
            .item:last-child
                border-radius 0 0 10px 0
    .col
        float left
        width 75%
        height 45px
        padding-right 10px
    .item
        float left
        height 45px
        width 50%
        display table
        table-layout fixed
        overflow hidden
        border 1px solid $background
    .selected
        background-color $compliment
    input[type=checkbox]
        position absolute
        opacity 0
        display none
