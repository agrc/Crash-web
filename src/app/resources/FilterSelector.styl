@require 'vars.styl';
@require 'FilterCommon.styl';

.filter-selector
    width 350px
    overflow-y auto
    overflow-x hidden
    position absolute
    top 80px
    right 25px
    z-index 100
    .title
        border-radius 10px 10px 0 0
        height 59px
        background-color $background
        color #ddd
        padding 5px
        width 100%
    .description
        width 100%
        height 2em
        text-align center
        padding-top 4px
        background-color $background
        color $compliment
    .filters
        background-color rgba(255,255,255,0.8)
        border-radius 0 0 10px 10px
        border 1px $background solid
    @media print
        display none
