.filter-controls
    padding 10px 0
    .control
        display inline-block
        width 32.5%
        height 65px
        vertical-align top
        text-align center
        padding-top 8px
        border-radius 10px
        border 1px black solid
        background-color rgba(255,255,255, 0.8)
        cursor pointer
    .text
        line-height 0
    .sprite
        height 35px
        width 35px
    .disabled
        fill #999